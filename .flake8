[flake8]
max-line-length = 88
extend-ignore = E203, W503, E501
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    backend/venv,
    frontend/web-app/node_modules,
    htmlcov,
    reports,
    build,
    dist,
    *.egg-info

per-file-ignores =
    __init__.py:F401
    # Deshabilitar chequeos de docstrings en tests
    tests/*: D100, D101, D102, D103, D104

max-complexity = 18
